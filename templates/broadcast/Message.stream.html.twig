{# Learn how to use Turbo Streams: https://github.com/symfony/ux-turbo#broadcast-doctrine-entities-update #}
{% block create %}
<turbo-stream action="append" target="messages">
    <template>
        <article id="{{ 'message_' ~ id }}">
            <p>{{ entity.content }}</p>
            <div>{{ entity.createdAt|date('Y-m-d H:i:s') }}</div>
        </article>
    </template>
</turbo-stream>
{% endblock %}

{% block update %}
<turbo-stream action="update" target="message_{{ id }}">
    <template>
        #{{ id }} updated
    </template>
</turbo-stream>
{% endblock %}

{% block remove %}
<turbo-stream action="remove" target="message_{{ id }}"></turbo-stream>
{% endblock %}
